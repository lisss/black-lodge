{
  "name": "black-lodge",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "server",
    "client"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "npm run dev --workspace=server",
    "dev:client": "npm run dev --workspace=client",
    "build": "cd client && npm install && npm run build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "vercel-build": "cd client && npm install && npm run build && mv dist ../dist"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "pg": "^8.11.3"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/pg": "^8.10.9",
    "@vercel/node": "^3.0.21",
    "concurrently": "^8.2.2"
  }
}